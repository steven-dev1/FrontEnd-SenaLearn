---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Modulos from "../../../components/Modulos.astro";
import Comentarios from "../../../components/Comentarios.astro";
import DarkButtons from "../../../components/DarkButtons.astro";
import Footer from "../../../components/Footer.astro";
import Link from "../../../components/Link.astro";
import ContenidoCurso from "../../../components/ContenidoCurso.astro";
---

<Layout title="Curso">
    <Header/>
    <section class=" bg-[#00324D] mb-10 flex flex-col items-center justify-center">
        <!-- Contenido -->
        <div class="w-full flex items-start p-5 gap-4">
            <!-- Contenido izquierdo -->
            <aside class="flex flex-col max-w-[500px] gap-4 justify-start">
                <h1 class="font-bold text-2xl text-white">Desarrollo Front-End con HTML, CSS y JavaScript</h1>
                <div class="w-full h-full flex flex-col items-start justify-start gap-2 pr-10">
                    <div class="cursor-pointer hover:shadow-2xl bg-white px-3 py-4 rounded-2xl text-black min-w-[420px] flex items-center justify-between">
                        <span class="font-bold list-disc mx-3 text-xl"><i class="fa-solid fa-caret-right mr-3"></i>Bienvenida al curso</span>
                        <span class="text-sm text-gray-600">1 clase - 5 min</span>
                    </div>
                    <div class="cursor-pointer hover:shadow-2xl bg-white px-3 py-4 rounded-2xl text-black flex flex-col items-left gap-3 min-w-[420px]">
                        <div class="flex items-center justify-between">
                            <span class="font-bold list-disc mx-3 text-xl"><i class="fa-solid fa-caret-right mr-3 rotate-90"></i>Datos y control</span>
                            <span class="text-sm text-gray-600">3 clases - 30 min</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <div class="py-2 hover:bg-gray-500 bg-[#00324D] rounded-2xl text-white transition-all duration-200 cursor-pointer">
                                <a href="/courses/Desarrollo Front-End con HTML, CSS y JavaScript/course" class="mx-3"><i class="fa-solid fa-video mr-3"></i>Llamadas a APIs</a>
                            </div>
                            <div class="py-2 hover:bg-gray-500 bg-[#00324D] rounded-2xl text-white transition-all duration-200 cursor-pointer">
                                <a href="/courses/Desarrollo Front-End con HTML, CSS y JavaScript/evaluacion" class="mx-3"><i class="fa-solid fa-file mr-3"></i>Evaluaci贸n</a>
                            </div>
                        </div>
                    </div>
                    <div class="cursor-pointer hover:shadow-2xl bg-white px-3 py-4 rounded-2xl text-black min-w-[420px] flex items-center justify-between">
                        <span class="font-bold list-disc mx-3 text-xl"><i class="fa-solid fa-caret-right mr-3"></i>Rey de las funciones</span>
                        <span class="text-sm text-gray-600">20 clase - 4 horas</span>
                    </div>
                </div>
            </aside>

            <!-- Contenido derecho -->
            <div class="w-5/6 h-auto bg-[#fff] rounded-3xl">
                <!-- VIDEO -->
                <div class="w-full min-h-[500px] bg-[#000] rounded-3xl flex items-center justify-center">
                    <div class="bg-[#fff] w-[75px] h-[75px] rounded-full flex items-center justify-center cursor-pointer hover:scale-125 transition-all duration-200">
                        <svg xmlns="http://www.w3.org/2000/svg" height="2em" viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#00324d}</style><path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"/></svg>
                    </div>
                </div>
                <!-- Descripcion -->
                <div class="flex flex-col w-full mt-2 p-6">
                    <h2 class="font-bold text-xl">Descripci贸n:</h2>
                    <ul class="flex w-full items-center justify-between mt-3">
                        <li class="font-medium">Recurso 1: <Link href="">https://recurso1.com</Link></li>
                        <li class="font-medium">Recurso 2: <Link href="">https://recurso2.com</Link></li>
                        <li><Link href="">Archivos de video</Link></li>
                    </ul>
                </div>
            </div>
        </div>  
    </section>
    <!-- Comentarios -->
    <section class="my-8 p-6 w-[90%] mx-auto">
        <h2 class="text-3xl font-bold my-6 text-center">Comentarios</h2>
        <div>
            <div class="flex gap-2 items-center my-3">
                <picture>
                    <div class="bg-gray-300 min-w-[50px] min-h-[50px] max-w-[50px] max-h-[50px] rounded-full"></div>
                </picture>
                <div class="flex flex-col items-start justify-start">
                    <span class="font-bold text-lg leading-tight">Yoiner Pertuz</span>
                    <span class="text-gray-500 text-xs leading-tight font-medium">Estudiante</span>
                    <span class="font-medium">Examen de acuerdo a lo que se dio en los m贸dulos anteriores, excelente contenido.</span>
                </div>
            </div>
            <hr>
            <Comentarios name="Samuel Mena" rol="Estudiante" message="Examen de acuerdo a lo que se dio en los m贸dulos anteriores, excelente contenido."/>
        </div>
    </section>
    <section class="w-full flex items-center justify-center mb-10">
        <DarkButtons>Agregar comentario</DarkButtons>
    </section>

    <Footer/>
</Layout>