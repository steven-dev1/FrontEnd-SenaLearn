---
import DarkButtons from "./DarkButtons.astro";
const {title, img,pro} = Astro.props
---

<article class="w-[300px] flex flex-col gap-3 items-center bg-white p-3 rounded-3xl ">
    <picture>
        <img src={img} class="w-[261px] h-[200px] bg-slate-400 rounded-3xl "></img>
    </picture>
    <div class="w-full text-black font-bold text-lg">
        <h3 class="truncate">{title}</h3>
    </div>
    <div class="text-black flex flex-col w-full">
        <div class="flex flex-col gap-2">
            <div class="flex items-center">
                <span class="font-semibold text-gray-600">Progreso:</span>
                <span class="font-semibold text-gray-600">{pro}</span>
            </div>
            <div class="flex w-full">
                <div class="w-4/5 bg-[#FF6C20] h-[2px]"></div>
                <div class="w-1/2 bg-[#025] h-[2px]"></div>
            </div>
        </div>
    </div>
    <div class="flex justify-center">
        <DarkButtons>Continuar Curso</DarkButtons>
    </div>
</article>